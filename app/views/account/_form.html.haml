= form_for(@user, :url => account_path, :remote => true) do |f|
  =render "shared/error_messages", :resource => @user

  %p
    = f.label :email, t('user.profile.email')
    %br/
    = f.text_field :email
  %p
    = f.label :bio, t('user.profile.bio')
    %br/
    = f.text_area :bio, :size => '28x12'
  
  =render "account/optins", :resource => @user
  
  .avatar
    %p
      = avatar_for(@user)
      :plain 
        #{avatar_hint(@user)}
  %p= f.submit t('common.validate')