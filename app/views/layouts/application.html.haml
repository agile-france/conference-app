!!!
%html
  %head
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html', :charset => 'utf-8'}
    = favicon_link_tag 'favicon.png'
    %title Conference Agile France 2011
    = stylesheet_link_tag 'reset'
    = stylesheet_link_tag '960'
    = stylesheet_link_tag 'text'
    
    = stylesheet_link_tag 'base'
    = stylesheet_link_tag 'errors'
    = javascript_include_tag :jquery_1_4_2
    = javascript_include_tag 'application'
    = yield :javascript
    = csrf_meta_tag

  %body
    #content_wrapper.container_12
      #header
        .grid_3
          %a{:href => "/"}
            %img#thumb{:src => "/images/AgileFranceConference2011-logo.png", :alt => "Logo Agile France"}
        .grid_9
          .toolbar.grid_9.alpha
            - if user_signed_in?
              %span= t('auth.greet', :user => current_user.greeter_name)
              | 
              %span= link_to t('account.title'), edit_account_path
              |
              %span#sign_out= link_to t('auth.sign_out'), destroy_user_session_path
              - if current_user.admin?
                |
                %span= link_to t('admin'), '/admin'
            - else
              %span#sign_in= link_to t('auth.sign_in'), new_user_session_path

            #mojo
              .mojo.grid_9.alpha 26 et 27 mai 2011
              .mojo.grid_9#sub-mojo.alpha Chalet de la Porte Jaune - Paris
        .clear
        #splash
          %p.pad_2
            Le rendez-vous <strong>incontournable</strong>
            %br
            de la communauté Agile française depuis 2006
        #menu.grid_5.prefix_7
          %a.menuItem.grid_1.alpha{:href => "/"}
            %div accueil
          %a.menuItem.grid_1{:href => "/soon"}
            %div calendrier
          %a.menuItem.grid_1{:href => "/place"}
            %div lieu
          %a.menuItem.grid_1{:href => "/sponsors"}
            %div sponsors
          %a.menuItem.grid_1.omega{:href => "/history"}
            %div histoire
      
        = render 'shared/flash', :flash => flash

      #content
        #content_container
          = yield
        
        .grid_12
          = render 'debug/show' if Rails.env.development?

    #footer
      #footer_container
        2011 - Organisation Conférence Agile France
        %br
        %br
        %a{:href => "/sponsors"}
          %img#badge-sponsor{:src => "/images/sponsor-2011.png", :alt => "Devenir sponsor 2011"}
