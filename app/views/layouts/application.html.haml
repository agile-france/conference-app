!!!
%html
  %head
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html', :charset => 'utf-8'}
    = favicon_link_tag 'favicon.png'
    %title Conference Agile France 2011
    = stylesheet_link_tag 'reset'
    = stylesheet_link_tag '960'
    = stylesheet_link_tag 'text'
    
    = stylesheet_link_tag 'base'
    = stylesheet_link_tag 'errors'
    = csrf_meta_tag
    = javascript_include_tag :defaults
    = yield :javascript
    %script{:type => "text/javascript", :src  => "http://referentiel.institut-agile.fr/souligneur.js"}

  %body
    #content_wrapper.container_12
      #header
        .grid_3
          %a{:href => "/"}
            %img#thumb{:src => "/images/AgileFranceConference2011-logo.png", :alt => "Logo Agile France"}
        .grid_9
          .toolbar.grid_9.alpha
            - if user_signed_in?
              %span= t('auth.greet', :user => current_user.greeter_name)
              | 
              %span= link_to t('account.title'), edit_account_path
              |
              %span#sign_out= link_to t('auth.sign_out'), destroy_user_session_path
              - if current_user.admin?
                |
                %span= link_to t('admin'), '/admin'
            - else
              %span#sign_in.suffix_4= link_to t('auth.sign_in'), new_user_session_path

            #mojo.suffix_2
              .mojo 26 et 27 mai 2011
              .mojo#sub-mojo Chalet de la Porte Jaune - Paris
        .clear
        #splash
          %p.pad_2
            Le rendez-vous <strong>incontournable</strong>
            %br
            de la communauté Agile française depuis 2006
        #menu.grid_6.prefix_6
          %a.menuItem.grid_1.alpha{:href => "/"}
            %div accueil
          %a.menuItem.grid_1{:href => "/program"}
            %div programme
          %a.menuItem.grid_1{:href => "/place"}
            %div lieu
          %a.menuItem.grid_1{:href => "/sponsors"}
            %div sponsors
          %a.menuItem.grid_1{:href => "/contact"}
            %div contact
          %a.menuItem.grid_1.omega{:href => "/promote"}
            %div promotion

        = render 'shared/flash', :flash => flash

      #logos
        %div.sponsor-container= "Platinium"
        %a{:href => "http://www.micropole.com", :title => "Micropole, sponsor Platinium" }
          %div.sponsor-container
            %img.sponsor.platinium{:src => "/images/logoMicropole.png", :alt => "Micropole, sponsor Platinium"}
        %div.sponsor-container= "Gold"
        %a{:href => "http://www.soat.fr/", :title => "So@t, sponsor Gold" }
          %div.sponsor-container
            %img.sponsor.gold{:src => "/images/logoSoat.png", :alt => "So@t, sponsor Gold"}
        %a{:href => "http://www.clt-services.com", :title => "CLT Services, sponsor Gold" }
          %div.sponsor-container
            %img.sponsor.gold{:src => "/images/logoCLT.jpg", :alt => "CLT Services, sponsor Gold"}
        %div.sponsor-container= "Media"
        %a{:href => "http://jduchess.org/duchess-france", :title => "Duchess France, partenaire média" }
          %div.sponsor-container
            %img.sponsor.media{:src => "/images/duchessfr_300px_90dpi_nom.jpg", :alt => "Duchess France, partenaire média"}
        %div.clear

      %br

      #content
        #content_container
          = yield
        
        .grid_12
          = render 'debug/show' if Rails.env.development?

    #footer
      .container_12
        #footer_container.grid_12
          2011 - Agile France Conférence
          %br
          %br
        .grid_10
          %a.logo-sponsor{:href => "http://www.micropole.com", :title => "Micropole, sponsor Platinium" }
            %img.sponsor.platinium{:src => "/images/logoMicropole.png", :alt => "Micropole, sponsor Platinium"}
          %a.logo-sponsor{:href => "http://www.soat.fr/", :title => "So@t, sponsor Gold" }
            %img.sponsor.gold{:src => "/images/logoSoat.png", :alt => "So@t, sponsor Gold"}
          %a.logo-sponsor{:href => "http://www.clt-services.com", :title => "CLT Services, sponsor Gold" }
            %img.sponsor.gold{:src => "/images/logoCLT.jpg", :alt => "CLT Services, sponsor Gold"}
          %a.logo-sponsor{:href => "http://jduchess.org/duchess-france", :title => "Duchess France, partenaire média" }
            %img.sponsor.media{:src => "/images/duchessfr_300px_90dpi_nom.jpg", :alt => "Duchess France, partenaire média"}
          %a{:href => "/sponsors"}
            %img#badge-sponsor{:src => "/images/sponsor-2011.png", :alt => "Devenir sponsor 2011"}
        .grid_2
          %div
            %a{:href => "http://www.w3.org/html/logo/"}
              %img{:width => 73, :height => 32, :title => "HTML5 Powered with CSS3 / Styling", :alt => "HTML5 Powered with CSS3 / Styling", :src => "http://www.w3.org/html/logo/badge/html5-badge-h-css3.png" }
          %br
          %div
            = link_to t('user-voice'), 'https://github.com/agile-france/conference-app/issues', :title => t('user-voice-action')
