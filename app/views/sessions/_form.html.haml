= form_for(@session, :url => url) do |f|
  %p
    = f.label :title, t('common.title')
    %br/
    = f.text_field :title, :size => '32'
  %p
    = f.label :description, t('common.description')
    %br/
    = f.text_area :description, :size => '28x12'
  %p
    = f.label :tags, t('common.tags')
    %br/
    = f.text_field :tags, :size => '32'
  %p= f.submit t('common.validate')