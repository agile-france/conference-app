%div{:id => "session_#{session.id}"}
  .header.grid_11
    .grid_6.alpha
      %h3= link_to session.title, session
    .grid_5.omega
      %h3
        %p
          = gravatar_for(session.user)
          = session.user.greeter_name
    .tags.grid_3.alpha
      = render 'sessions/tags', :tags => session.tags
    .grid_8.omega
      %ul
        - ([:format, :level, :age].map{|f| i18n_text_for(session, f)} << session.capacity).reject(&:blank?).each do |trait|
          %li= trait
  .clear
