%h1.pad_2
  = render @conference

.buttons.grid_3.prefix_3= link_to t('sessions.new?'), new_conference_session_path(@conference)
.buttons.grid_3.suffix_3= link_to t('registrations.new?'), new_conference_registration_path(@conference)

- @sessions.each do |session|
  = render 'sessions/header', :session => session
  = render 'sessions/summary', :session => session
  
.pagination
  = will_paginate @sessions
  
